<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:hint="@string/search_drug"
            android:inputType="text" />

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:contentDescription="@string/search_icon"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- RecyclerView for results -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDrugs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp" />

    <LinearLayout
        android:id="@+id/layoutNoResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivNoResults"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/not_found"
            android:contentDescription="@string/no_results"
            app:tint="@color/dark_grey" />

        <TextView
            android:id="@+id/tvNoResultsMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/no_results"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@color/dark_grey"
            android:gravity="center" />

        <Button
            android:id="@+id/btnAddPersonalDrug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/add_user_drug"
            android:backgroundTint="@color/grapefruit_red"
            android:textColor="@color/milk_white"
            android:paddingLeft="24dp"
            android:paddingRight="24dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/back"
        android:elevation="8dp"
        android:padding="10dp"
        android:src="@drawable/ic_arrow_back" />
</LinearLayout>

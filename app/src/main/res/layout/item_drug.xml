<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/drug_item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="110dp"
        android:padding="12dp">

        <!-- Drug Name -->
        <TextView
            android:id="@+id/drug_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:text="Drug Name"
            android:textColor="@color/grapefruit_red"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Dosage Info -->
        <TextView
            android:id="@+id/drug_dosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drug_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:text="50mg - 2x/day"
            android:textColor="@color/text_grey"
            android:textSize="14sp" />

        <!-- Intake Times -->
        <TextView
            android:id="@+id/drug_intake_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drug_dosage"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="08:00, 20:00"
            android:textColor="@color/accent_green"
            android:textSize="12sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- User Drug Info Section -->
        <TextView
            android:id="@+id/tvDrugName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/grapefruit_red"
            android:textSize="26sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvDosage"
            android:textColor="@color/dark_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tvDates"
            android:textColor="@color/dark_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvAmountPerDay"
            android:textColor="@color/grapefruit_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvActiveStatus"
            android:textColor="@color/accent_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Intake Times -->
        <TextView
            android:text="@string/intake_times"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="@color/wood_brown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/intakeTimesContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/view_drug_info"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_arrow_back"
        android:elevation="8dp"
        android:padding="10dp" />


</RelativeLayout>